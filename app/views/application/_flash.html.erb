<% if notice %>
  <div class="alert alert-primary alert-dismissible">
    <button class="btn-close" type="button" data-bs-dismiss="alert"></button>
    <%= notice %>
  </div>
<% end %>

<% if alert %>
  <div class="alert alert-danger alert-dismissible">
    <button class="btn-close" type="button" data-bs-dismiss="alert"></button>
    <%= alert %>
  </div>
<% end %>
